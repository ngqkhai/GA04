<section>
    <div class="container-fluid p-0">
        <!-- Movie Trailer -->
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="{{trailer_url}}" allowfullscreen></iframe>
        </div>
        <div class="row">
            <!-- Movie Image -->
            <div class="col-12 col-sm-5 col-xl-5 col-xxl-3 details-des p-0">
                <img src="{{image_url}}" alt="{{title}}" class="img-fluid ">
            </div>

            <!-- Movie Details -->
            <div class="col-12 col-sm-7 col-xl-7 px-4 px-sm-1 mv-details">
                <h1>{{title}} <span class="age-limit-a">{{age}}</span></h1>
                <div class="mv-time">
                    <p class="me-3">
                        <i class="fa-solid fa-clock" style="color: #74C0FC;"></i> {{duration}} phút
                    </p>
                    <p>
                        <i class="fa-solid fa-calendar" style="color: #74C0FC;"></i> {{start_date}}
                    </p>
                </div>
                <div class="mv-rating">
                    <p>
                        <i class="fa-solid fa-star" style="color: #FFD43B;"></i> {{rating}}
                    </p>
                </div>
                {{!-- Display country if available --}}
                <div class="mv-infos">
                    {{#if country}}
                        <p><strong>Quốc gia:</strong> {{country}}</p>
                    {{else}}
                        <p><strong>Quốc gia:</strong> Đang cập nhật</p>
                    {{/if}}
                    {{!-- Display production if available --}}
                    {{#if production}}
                        <p><strong>Nhà sản xuất:</strong> {{production}}</p>
                    {{else}}
                        <p><strong>Nhà sản xuất:</strong> Đang cập nhật</p>
                    {{/if}}
                </div>
                <!-- Genre, Director, and Actors Information -->
                <div class="info-section">
                    <div class="d-flex align-items-center">
                        <span class="label">Thể loại:</span>
                        <ul class="genre-list">
                            {{#each genre}}
                                <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="label">Đạo diễn:</span>
                        <ul class="genre-list">
                            {{#each director}}
                                <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="label">Diễn viên:</span>
                        <ul class="genre-list">
                            {{#each actors}}
                                <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>

                <!-- Booking Button -->
                <div class="mt-4">
                    <a href="#" class="book-ticket">Đặt vé</a>
                </div>
            </div>
        </div>

        <!-- Movie Description -->
        <div class="mx-2 mx-xl-3 mt-3">
            <div class="text-film">Nội Dung Phim</div>
            <p class="mt-2">{{description}}</p>
        </div>
    </div>
</section>